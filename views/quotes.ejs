<% include ./partials/_head %>

<div class="container">
  <h1>Movie Quotes</h1>

  <div class="accordion" id="quote-list">
   <!-- loop over the quotes array -->
    <% for (let quoteObj of quoteList) { %> 
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h5 class="mb-0">
          <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#<%= quoteObj.id%>"
            aria-expanded="false" aria-controls="collapseTwo">
            <%= quoteObj.quote %> 
          </button>
        </h5>

        <span>
          <form method="GET" action="/quotes/<%= quoteObj.id %>/update"><input type="submit" class="btn btn-secondary btn-sm"
              value="Edit"></form>
          <form method="post" action="/quotes/<%= quoteObj.id %>/delete"><input type="submit" class="btn btn-secondary btn-sm"
              value="Delete"></form>
        </span>

      </div>
      <div id="<%= quoteObj.id %>" class="collapse" aria-labelledby="headingTwo" data-parent="#quote-list">
        <div class="card-body">
          <h4>Comments</h4>

          <ul class="list-group">
            
            <!-- Loop over the comments -->
            <% for (let commentObj of quoteObj.comments) { %>

            <li class="list-group-item">
              <%= commentObj.comment %> 
              <span>
                <form method="get" action=""><input type="submit" class="btn btn-secondary btn-sm"
                    value="Edit"></form>
                <form method="post" action=""><input type="submit" class="btn btn-secondary btn-sm"
                    value="Delete"></form>
              </span>
            </li>
            <!-- closing the looping of the comments -->
            <% } %> 
          </ul>

          <a href="" class="btn btn-info">Add Comment</a>
        </div>
      </div>
    </div>
    <!-- closing the looping of the quotes -->
    <% } %> 
  </div>
  <a href="/quotes/new" class="btn btn-primary">Add Quote</a>
</div>
</body>

</html>